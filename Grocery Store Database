--create a grocery store database

CREATE TABLE grocery_store (id INTEGER PRIMARY KEY, item TEXT, aisle INTEGER, price INTEGER);

INSERT INTO grocery_store VALUES (1, "apples", 1, 0.75);
INSERT INTO grocery_store VALUES (2, "bananas", 1, 0.25);
INSERT INTO grocery_store VALUES (3, "lettuce", 1, 0.5);
INSERT INTO grocery_store VALUES (4, "cereal", 2, 3.25);
